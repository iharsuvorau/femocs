#############################################################################
#            Makefile for building Femocs as a static library
#############################################################################

include build/makefile.defs
include share/makefile.femocs

all: lib/libfemocs.a

lib/libfemocs.a: build/.build/Makefile src/* include/*
	cd build/.build; make -j${NPROCS}

build/.build/Makefile:
	mkdir -p build/.build;
	cd build/.build; rm -rf *; cmake -DCMAKE_BUILD_TYPE=Release -DTARGET_TYPE=lib -DLIBCGAL=${LIBCGAL} \
-DCMAKE_Fortran_COMPILER=${F90} -DCMAKE_C_COMPILER=${CC} -DCMAKE_CXX_COMPILER=${CXX} ..;

lib/libfemocs_debug.a: build/.build_debug/Makefile src/* include/*
	cd build/.build_debug; make -j${NPROCS}

build/.build_debug/Makefile:
	mkdir -p build/.build_debug;
	cd build/.build_debug; rm -rf *; cmake -DCMAKE_BUILD_TYPE=Debug -DTARGET_TYPE=lib -DLIBCGAL=${LIBCGAL} \
-DCMAKE_Fortran_COMPILER=${F90} -DCMAKE_C_COMPILER=${CC} -DCMAKE_CXX_COMPILER=${CXX} ..;

clean:
	rm -rf lib/libfemocs.a lib/libfemocs.mod build/.build*

clean-all:
	rm -rf lib/libfemocs.a lib/libfemocs.mod build/.build*
